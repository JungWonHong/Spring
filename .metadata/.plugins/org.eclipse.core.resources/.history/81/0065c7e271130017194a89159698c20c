package ex5_3_while;

public class while01 {

	public static void main(String[] args) {
		// 1~10까지 1씩 증가
		System.out.println("==1씩증가==");
		int i = 1;
		while (i <= 10) {
			System.out.println(i);
			i = i + 1; // i++;
		}

		// 홀수출력
		System.out.println("==홀수출력==");
		i = 1;
		while (i <= 10) {
			System.out.println(i);
			i += 2;
		}

		// 짝수출력
		System.out.println("==짝수출력==");
		i = 2;
		while (i <= 10) {
			System.out.println(i);
			i += 2;
		}

		// 1~10까지의 합
		System.out.println("==1~10의 합==");
		int sum = 0;
		i = 1;
		while (i <= 10) {
			sum += i;
			i++;
		}

		System.out.println(sum);

	}

}
