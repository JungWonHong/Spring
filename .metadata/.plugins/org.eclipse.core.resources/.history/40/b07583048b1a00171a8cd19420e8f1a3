package report_no11;

public class Student {
	String name; //학생이름
	int kor;	 //국어점수
	int eng;	 //영어점수
	int math;	 //수학점수
	
	Student(String name, int kor, int eng, int math){
		this.name = name;
		this.kor = kor;
		this.eng = eng;
		this.math = math;
	}
	
	int getTotal(){
		return kor+eng+math;
	}
	
	float getAverage(){
		float average;
		average = Math.round((getTotal() / 3.0f)*10)/10;
		return average;
	}
	
}
