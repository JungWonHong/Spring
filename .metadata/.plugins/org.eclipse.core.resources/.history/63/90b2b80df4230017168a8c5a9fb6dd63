package report_0418;

public class Lotto {

	public static void main(String[] args) {

		int[] lotto = new int[6];

		for (int i = 0; i < lotto.length; i++) {
			lotto[i] = (int) (Math.random() * 45 + 1);
			for (int j = 0; j < i + 1;) {
				if (lotto[i] == lotto[j]) {
					lotto[i] = (int) (Math.random() * 45 + 1);
					j = 0;
					continue;
				} else {
					j++;
				}
			}
		}

		for (int i = 0; i < lotto.length; i++)
			System.out.print(lotto[i] + "\t");

	}

}
