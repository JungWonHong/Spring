package baekjoon;

import java.util.Scanner;

public class Main {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		String alph = sc.next();
		int cnt = 0;
		for (int i = 0; i < alph.length(); i++) {
			if (alph.length() == 1) {
				if (alph.length() >= 'a' && alph.length() <= 'z')
					cnt++;
					
				break;
			}

			else if (alph.charAt(i) == 'c') {
				if (alph.charAt(i + 1) == '=' || alph.charAt(i + 1) == '-')
					continue;
			} else if (alph.charAt(i) == 'd') {
				if (alph.charAt(i + 1) == 'z' && alph.charAt(i + 2) == '=') {
					continue;
				} else if (alph.charAt(i + 1) == '-')
					continue;
			} else if (alph.charAt(i) == 'l' || alph.charAt(i) == 'n') {
				if (alph.charAt(i + 1) == 'j')
					continue;
			} else if (alph.charAt(i) == 's' || alph.charAt(i) == 'z') {
				if (alph.charAt(i + 1) == '=')
					continue;
			}
			cnt++;
		}

		System.out.println(cnt);

		sc.close();
	}
}
